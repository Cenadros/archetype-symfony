<script>
$(document).ready(function() {
    $('.js-anchor').on('click', function(e) {
        e.preventDefault();
        $('html, body').animate({
            scrollTop: $($.attr(this, 'href')).offset().top
        }, 500);
        $('.js-anchor').removeClass('active');
        $(this).addClass('active');
    });

    var waypoints = $('.Styleguide-section').waypoint({
        handler: function(direction) {
            var id = $(this).attr('id');
            $('.Styleguide-anchors li a').attr('class', 'Styleguide-anchorsItem js-anchor');
            $('.Styleguide-anchors li a[href$="#'+id+'"]').addClass('active');
        }
    })

    $('.hamburger').on("click", function() {
        $('html').toggleClass('open-nav');
        $(this).toggleClass('is-active');
    });

    $('.Styleguide-anchors li a').on("click", function() {
        $('html').removeClass('open-nav');
        $('.hamburger').toggleClass('is-active');
    });

    $(window).on('resize', function() {
        $('html').removeClass('open-nav');
        $('.hamburger').removeClass('is-active');
    });
});
</script>