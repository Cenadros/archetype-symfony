{% set url = app.request.uri %}
{% if image is not empty %}
    {% set image_relative_url %}{% path image, 'reference' %}{% endset %}
    {% set image_public_url = app.request.schemeAndHttpHost ~ image_relative_url %}
{% endif %}

<title>{{ title }}</title>

<meta name="title" content="{{ title|truncate(70) }}" />
<meta name="description" content="{{ description|striptags|truncate(155) }}" />

<meta property="og:type" content="website"/>
<meta property="og:title" content="{{ title|truncate(95) }}"/>
<meta property="og:description" content="{{ description|striptags|truncate(300) }}"/>
{% if image is not empty %}
<meta property="og:image" content="{{ image_public_url }}"/>
{% endif %}
<meta property="og:url" content="{{ url }}"/>
<meta property="og:site_name" content="Runroom"/>

<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{{ title|truncate(70) }}">
<meta name="twitter:description" content="{{ description|striptags|truncate(200) }}">
{% if image is not empty %}
<meta name='twitter:image' content='{{ image_public_url }}'>
{% endif %}
<meta name="twitter:url" content="{{ url }}">
<meta name="twitter:site" content="@runroom">
<meta name="twitter:creator" content="@runroom">
