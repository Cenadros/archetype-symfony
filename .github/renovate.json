{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["sonata-project/"],
      "groupName": "sonata-project",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["psalm"],
      "groupName": "psalm",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["phpstan"],
      "groupName": "phpstan",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["stylelint"],
      "groupName": "stylelint",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["doctrine/"],
      "groupName": "doctrine",
      "automerge": true
    }
  ]
}
