{% set class = class|default('') %}
<header class="header {{ class }}">
    <div class="u-wrapper u-flex u-flex--align-start u-flex--justify-between">
        <a class="header__logo" href="{{ path('archetype.demo.route.demo') }}">{% include 'svg/runroom-logo.svg' %}</a>
        <ul class="header__language p-small">
            {% for lang, href in page.alternateLinks %}
            <li>
                {% if locale == lang %}
                    <span>{{ lang|upper }}</span>
                {% else %}
                    <a href="{{ href }}">{{ lang|upper }}</a>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </div>
</header>
